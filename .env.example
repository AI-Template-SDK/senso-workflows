# Docker Environment Variables Example
# Copy this file to docker.env for local development with Docker Compose

# GitHub Authentication - REQUIRED for private repo access
GITHUB_PAT=your-github-personal-access-token-here

# Server configuration
PORT=8080
ENVIRONMENT=development

# Force Inngest SDK to Dev Mode (disables signature verification)
INNGEST_DEV=1

# Inngest configuration for Docker Compose
INNGEST_EVENT_KEY=test-event-key
INNGEST_BASE_URL=http://inngest:8288

# API Keys - Replace with your actual keys
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Application configuration
APPLICATION_API_URL=http://localhost:3000
API_TOKEN=test-token

# Database Connection Pool Settings
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=25
DB_CONN_MAX_LIFETIME=300
DB_SSLMODE=disable 

# Bright Data (existing)
BRIGHTDATA_API_KEY=
BRIGHTDATA_DATASET_ID=
PERPLEXITY_DATASET_ID=
GEMINI_DATASET_ID=

# Oxylabs Web Scraper API (ChatGPT source)
OXYLABS_USERNAME=
OXYLABS_PASSWORD=

# ScrapingBee (ChatGPT GPT API)
SCRAPINGBEE_API_KEY=

# Scrapeless (LLM Chat Scraper)
SCRAPELESS_API_KEY=